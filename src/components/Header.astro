---
import HeaderLink from './HeaderLink.astro';
import Socials from './Socials.astro'
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<a href="/"><img src="blog-placeholder-about.jpg" alt="Logo" class="w-16 h-9 min-w-16"/></a>
		<div class="internal-links ml-auto mr-auto justify-center text-sm leading-10 overflow-x-auto min-w-56 sm:text-xl ">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/frameworks">Frameworks</HeaderLink>
		</div>
		<Socials>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--theme-header-bg);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.2em;
		color: var(--theme-text-color);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--theme-link-color);
	}
	.social-links,
	.social-links a {
		display: flex;
	}

</style>
